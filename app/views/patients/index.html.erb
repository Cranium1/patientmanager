<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<div class="infinity-table" style="height: 500px; overflow-y: scroll;">
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>First</th>
      <th>Last</th>
      <th>HIV</th>
      <th>Pending Biopsy</th>
      <th>Pending Other</th>
      <th>Cancer</th>
      <th>Date seen</th>
      <th>Date return</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
        <td><%= patient.name_first %></td>
        <td><%= patient.name_last %></td>
        <td><%= patient.hiv_positive %></td>
        <td><%= patient.biopsy_pending %></td>
        <td><%= patient.other_pending %></td>
        <td><%= patient.cancer %></td>
        <td><%= patient.date_seen %></td>
        <td><%= patient.date_return %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

